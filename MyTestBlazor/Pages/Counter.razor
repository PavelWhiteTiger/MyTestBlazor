@page "/counter"
@inject SingletontServices _singletontServices
@inject TransientServices _transientServices
<div class="row">
    <div class="col alert alert-secondary text-center">
        <h1>Counter</h1>
    </div>
</div>
<div class="row">
    <div class="col-6 text-left">
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
    </div>
    <div class="col-6 text-right">
        <div style="font-size:  50px">@currentCount</div>
    </div>
</div>

<div class="row">
    <div class="col-6 text-left">
        <input type="number" class="form-control-lg" @bind:event="oninput" @bind="@currentCount"/>
    </div>
</div>


<p role="status">Current count: @currentCount</p>
<div class="row mt-3">
    <div class="col-6 text-centre alert alert-primary">
        Singleton count:@_singletontServices.Value
    </div>
    <div class="col-6 text-centre alert alert-danger">
        Transient count:@_transientServices.Value
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        _transientServices.Value++;
        _singletontServices.Value++;
    }

}