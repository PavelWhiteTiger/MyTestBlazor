@if (ListOfItems is null)
{
    <div class="row text-center">
        <div class="col">
            <img src="icon-192.png"/>
        </div>
    </div>
}
else if (ListOfItems.Count is 0)
{
    <div class="row text-center">
        <div class="col">
            <img src="favicon.ico"/>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in ListOfItems)
        {
            <IndividualGame Game="item"/>
        }
    </div>
}


@code {

    [Parameter]
    public List<GameModel> ListOfItems { get; set; }

}